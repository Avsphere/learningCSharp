{
  "$schema-template": "2.0.0",
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "runtime": {
          "type": "docker",
          "settings": {
            "minDockerVersion": "v1.25",
            "loggingOptions": "",
            "registryCredentials": {
              "avspregistry": {
                "username": "$CONTAINER_REGISTRY_USERNAME_avspregistry",
                "password": "$CONTAINER_REGISTRY_PASSWORD_avspregistry",
                "address": "avspregistry.azurecr.io"
              }
            }
          }
        },
        "systemModules": {
          "edgeAgent": {
            "type": "docker",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-agent:1.0",
              "createOptions": {}
            }
          },
          "edgeHub": {
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "mcr.microsoft.com/azureiotedge-hub:1.0",
              "createOptions": {
                "HostConfig": {
                  "PortBindings": {
                    "5671/tcp": [
                      {
                        "HostPort": "5671"
                      }
                    ],
                    "8883/tcp": [
                      {
                        "HostPort": "8883"
                      }
                    ],
                    "443/tcp": [
                      {
                        "HostPort": "443"
                      }
                    ]
                  }
                }
              }
            }
          }
        },
        "modules": {
          "Master": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.Master}",
              "createOptions": {}
            }
          },
          "CommandHandler": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.CommandHandler}",
              "createOptions": {}
            }
          },
          "EngineDataCollector": {
            "version": "1.0",
            "type": "docker",
            "status": "running",
            "restartPolicy": "always",
            "settings": {
              "image": "${MODULES.EngineDataCollector}",
              "createOptions": {}
            }
          }
        }
      }
    },
    "$edgeHub": {
      "properties.desired": {
        "schemaVersion": "1.0",
        "routes": {
          "MasterToIoTHub": "FROM /messages/modules/Master/outputs/output1 INTO $upstream",
          "MasterToEngineDataCollector": "FROM /messages/modules/Master/outputs/output2 INTO BrokeredEndpoint(\"/modules/EngineDataCollector/inputs/input2\")",
          "CommandHandlerToIoTHub": "FROM /messages/modules/CommandHandler/outputs/* INTO BrokeredEndpoint(\"/modules/Master/inputs/input1\")",
          "EngineDataCollectorToMaster": "FROM /messages/modules/EngineDataCollector/outputs/* INTO BrokeredEndpoint(\"/modules/Master/inputs/input1\")"
        },
        "storeAndForwardConfiguration": {
          "timeToLiveSecs": 7200
        }
      }
    }
  }
}